<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del juego" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción del juego" />

    <EditText
        android:id="@+id/et_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Año de publicación"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de jugadores" />

    <EditText
        android:id="@+id/et_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tiempo de juego" />

    <!-- Spinner para el primer género -->
    <Spinner
        android:id="@+id/spinner_genre1"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <!-- Spinner para el segundo género -->
    <Spinner
        android:id="@+id/spinner_genre2"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btn_add_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Añadir juego" />

</LinearLayout>
